{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@microsoft/signalr": ["node_modules/@microsoft/signalr"]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["src"]
}